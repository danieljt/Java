public class Lesbok
{
  public static void main(String[] args) throws Exception
  {
    // Read book
    Ordliste bok = new Ordliste();
    bok.lesBok("testtext.txt");

    // Get number of words and print
    int antall = bok.antallOrd();
    System.out.println(antall);
    
    // Test that the word are increased
    int forekomst = bok.antallForekomster("Timmy");
    System.out.println(forekomst);

    Ord flest = bok.vanligste();
    System.out.println(flest.toString());

    Ord[] defleste = bok.alleVanligste(3);
    for(Ord ord : defleste) 
      {
	System.out.printf("%-20s %4d \n",ord.toString(), ord.hentAntall());
      }
  }
}
