import java.util.Scanner;
/*
Simple program for calculating the parking fee for a parking lot 
with the following prices.
--------------
1 day: 100
3 day: 200
7 day: 400
--------------
If a customer has a firm deal with the company, the program asks
for this and gives a 50% discount.
 */
public class MinOppgave2
{
  public static void main(String[] args)
  {
    Scanner reader = new Scanner(System.in);
      
    // Enter the number of days to park, calculate and print
    System.out.println("Please enter the number of days you want to park: ");
    int days = reader.nextInt();
    price = calculatefee(days);
    System.out.println("Your current price for parking is "+ price);

    // Ask for discount and calculate if true
    System.out.println("Do you have a discount card? (y/n): ");
    String discount = reader.next();
      
    if (discount == "y")
      {
	int price = discountfee(price);
      }
  }
  public static int calculatefee(int days)
  {
    int price = 300;
    return price;
  }
  public static int discountfee(int price)
  {
    price = price/2;
    return price;
  }
}
